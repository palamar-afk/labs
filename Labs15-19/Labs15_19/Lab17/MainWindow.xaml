<Window x:Class="Lab17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab17"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <WrapPanel Background="White" x:Name="HoverArea" MouseMove="MouseHover" Width="150" Height="100">
            <Button x:Name="MainButton" Width="100" Height="50" Margin="25,25" MouseMove="OkMouseMove">OK</Button>
        </WrapPanel>
        <Button x:Name="CancelButton" Width="100" Height="40" Margin="0,-150,0,0">Cancel</Button>
    </Grid>
</Window>
